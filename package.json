{
  "name": "azure-schema-mcp",
  "version": "1.0.0",
  "description": "MCP server for Azure Log Analytics schema discovery with device code authentication",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "azure-schema-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "clean": "if exist build rmdir /s /q build",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose"
  },
  "keywords": [
    "mcp",
    "azure",
    "log-analytics",
    "schema",
    "kql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/identity-cache-persistence": "^1.2.0",
    "@azure/monitor-query": "^1.3.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "c8": "^10.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.13"
  }
}
